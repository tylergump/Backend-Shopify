<%- include('./partials/header.ejs') %>
<h1> Inventory </h1>

<% for (let i = 0; i < items.length; i++){ %>
  <h3>Item: <%=items[i].name%></h3>
  <!-- <p>Deleted: <%=items[i].deleted%></p> -->
  <%if (items[i].qty > 0) {%>
    <p>Quantity: <%=items[i].qty%></p>
    <!-- <form action="/inv/<%=items[i].id%>/buy?_method=PUT" method="POST">
      <button>Buy</button>
    </form> -->
  <%} else {%>
    <p>Quantity: SOLD OUT</p>
  <%}%>
  <p>Deleted: <%=items[i].deleted%></p>
  <form action="/inv/<%=items[i].id%>?_method=DELETE" method="post">
    <button>Delete</button>
  </form>
  <button><a href="/inv/<%=items[i].id%>">View</a></button>
<%}%>
<%- include('./partials/footer.ejs') %>